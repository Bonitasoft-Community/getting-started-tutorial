<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bos-assembly</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<filtered>true</filtered>
			<includes>
				<include>MANIFEST</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}</directory>
			<includes>
				<include>.store/**</include>
				<include>web_page/**</include>
				<include>web_widgets/custom*/**</include>
				<include>web_fragments/**</include>
				<include>restAPIExtensions/**</include>
				<include>themes/**</include>
				<include>xsd/**</include>
				<include>profiles/**</include>
				<include>src-groovy/**</include>
				<include>src-filters/**</include>
				<include>src-connectors/**</include>
				<include>applications/**</include>
				<include>attachments/**</include>
				<include>diagrams/**</include>
				<include>environements/**</include>
				<include>filters-conf/**</include>
				<include>filters-def/**</include>
				<include>filters-impl/**</include>
				<include>connectors-conf/**</include>
				<include>connectors-def/**</include>
				<include>connectors-impl/**</include>
				<include>process_configurations/**</include>
				<include>kpis/**</include>
				<include>organizations/**</include>
				<include>bdm/**</include>
				<include>documentation/**</include>
				<include>README.adoc</include>
				<include>pom.xml</include>
			</includes>
			<excludes>
				<exclude>**/node/**</exclude>
				<exclude>**/node_modules/**</exclude>
				<exclude>**/target/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>